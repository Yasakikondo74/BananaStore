@model IEnumerable<BananaStore.Models.Box>

<h2>Box List</h2>

@foreach (var box in Model)
{
    <div style="border: 1px solid #ccc; padding: 10px; margin-bottom: 15px;">
        <h3>Box ID: @box.Id</h3>
        <p><strong>Color:</strong> @box.HexColor</p>
        <p><strong>Created:</strong> @box.CreatedAt.ToShortDateString()</p>
        <p><strong>Banana Count:</strong> @box.Quantity</p>
        <p><strong>Total Price:</strong> $@box.TotalPrice</p>
        <p><strong>Is Full:</strong> @(box.IsFull ? "Yes" : "No")</p>

        @if (box.Bananas != null && box.Bananas.Any())
        {
            <h4>Bananas</h4>
            <ul>
                @foreach (var banana in box.Bananas)
                {
                    <li>
                        Description: @banana.Description ?? "N/A",
                        Price: $@banana.Price,
                        Expired: @(banana.Expired ? "Yes" : "No")
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No bananas in this box.</p>
        }
    </div>
}
